@using EntityLayer.Concrete
@model List<Announcement>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{
	string color = "";
}
<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Duyurular</h4>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Başlık.</th>
							<th>Tarih</th>
							<th>Tür</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							if (item.Status == "Yeni Yazı")
								color = "badge badge-danger";
							else if (item.Status == "Yeni Video")
								color = "badge badge-warning";
							else if (item.Status == "Konferans")
								color = "badge badge-info";
							else if (item.Status == "WorkShop")
								color = "badge badge-success";
							<tr>
									<td>@item.ID</td>
									<td>@item.Title</td>
									<td>@item.Date</td>
									<td><label class="@color">@item.Status</label></td>
								</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

