@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@*@{
	string color = "";
}*@
<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Giden Kutusu</h4>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Konu.</th>
							<th>Alıcı</th>
							<th>Tarih</th>
							<th>Detaylar</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							@*if (item.WriterMessageId == "Yeni Yazı")
								color = "badge badge-danger";
							else if (item.Status == "Yeni Video")
								color = "badge badge-warning";
							else if (item.Status == "Konferans")
								color = "badge badge-info";
							else if (item.Status == "WorkShop")
								color = "badge badge-success";*@
							<tr>
								<th>@item.WriterMessageId</th>
								<td>@item.Subject</td>
								<td>@item.Receiver</td>								
								<td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
								<td><a href="/Writer/Default/AnnouncementDetails/@item.WriterMessageId" class="btn btn-outline-primary">Mesajı Gör</a></td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>



